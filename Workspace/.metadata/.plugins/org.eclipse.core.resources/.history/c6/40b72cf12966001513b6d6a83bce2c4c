package MyPackage;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

public class ServerListenerThread extends Thread
{
	private int routerPortNumber = 0;
	ServerSocket serverSocket = null;
	
	
	public ServerListenerThread(int routerPortNumber) throws IOException
	{
		this.routerPortNumber = routerPortNumber;
		serverSocket = new ServerSocket(routerPortNumber,4);
	}
	
	
	@Override
	public void run()
	{
		Socket connectionRequest;
		while(true)
		{
			try
			{
				connectionRequest = serverSocket.accept();
				new ExternalRouterConnection(connectionRequest);
			}
			catch (IOException e)
			{
				System.out.println("A router attempted a connection but failed.");
			}
		}
	}
}
